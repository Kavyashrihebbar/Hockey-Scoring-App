<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F5F5F5">

        <!-- Header with back arrow and title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#6C7CE7"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <ImageView
                android:id="@+id/backArrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_back"
                android:tint="@android:color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Live Scoring"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center" />

        </LinearLayout>

        <!-- Main Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:paddingBottom="24dp">

                <!-- Save & Next and Settings buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:layout_marginBottom="24dp">

                    <Button
                        android:id="@+id/saveNextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Save &amp; Next"
                        android:textColor="@android:color/white"
                        android:background="@drawable/rounded_button_blue"
                        android:textSize="14sp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:layout_marginEnd="8dp" />

                    <ImageView
                        android:id="@+id/clockButton"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_play"
                        android:background="@drawable/circle_background"
                        android:padding="8dp"
                        android:contentDescription="Timer" />

                </LinearLayout>

                <!-- Score Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <!-- Team Names -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="16dp">

                            <TextView
                                android:id="@+id/teamANameLabel"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="TEAM A"
                                android:textColor="#B83DBA"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:gravity="center" />

                            <TextView
                                android:id="@+id/teamBNameLabel"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="TEAM B"
                                android:textColor="#4CAF50"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:gravity="center" />

                        </LinearLayout>

                        <!-- Scores -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginBottom="24dp">

                            <TextView
                                android:id="@+id/teamAScore"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#B83DBA"
                                android:textSize="64sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="  -  "
                                android:textColor="#333333"
                                android:textSize="32sp"
                                android:layout_marginStart="24dp"
                                android:layout_marginEnd="24dp" />

                            <TextView
                                android:id="@+id/teamBScore"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#4CAF50"
                                android:textSize="64sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <!-- Period -->
                        <TextView
                            android:id="@+id/periodText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Live Match"
                            android:textColor="#333333"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginBottom="8dp" />

                        <!-- Timer -->
                        <TextView
                            android:id="@+id/timer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="00:00:00"
                            android:textColor="#2196F3"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginBottom="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?android:attr/selectableItemBackground"
                            android:padding="8dp" />

                        <!-- Timer Progress Bar -->
                        <ProgressBar
                            android:id="@+id/timerProgress"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:progress="50"
                            android:progressTint="#2196F3" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Goal and Saves Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <!-- Team A Buttons -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <Button
                            android:id="@+id/teamAGoalButton"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="+1 Goal âš½"
                            android:textColor="@android:color/white"
                            android:background="@drawable/rounded_button_purple"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <Button
                            android:id="@+id/teamASavesButton"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="ðŸ§¤ Saves"
                            android:textColor="@android:color/white"
                            android:background="@drawable/rounded_button_purple_dark"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <!-- Team B Buttons -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <Button
                            android:id="@+id/teamBGoalButton"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="+1 Goal âš½"
                            android:textColor="@android:color/white"
                            android:background="@drawable/rounded_button_green"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <Button
                            android:id="@+id/teamBSavesButton"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="ðŸ§¤ Saves"
                            android:textColor="@android:color/white"
                            android:background="@drawable/rounded_button_green_dark"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Control Buttons (flags / substitution) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="..."
                        android:textSize="24sp"
                        android:textColor="#666666"
                        android:layout_marginEnd="16dp" />

                    <ImageView
                        android:id="@+id/majorPenaltyButton"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_flag"
                        android:tint="#F44336"
                        android:background="@drawable/circle_background_red"
                        android:padding="12dp"
                        android:layout_marginEnd="16dp"
                        android:clickable="true"
                        android:focusable="true" />

                    <ImageView
                        android:id="@+id/minorPenaltyButton"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_flag"
                        android:tint="#FFC107"
                        android:background="@drawable/circle_background_orange"
                        android:padding="12dp"
                        android:layout_marginEnd="16dp"
                        android:clickable="true"
                        android:focusable="true" />

                    <ImageView
                        android:id="@+id/substitutionButton"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_refresh"
                        android:tint="#2196F3"
                        android:background="@drawable/circle_background_blue"
                        android:padding="12dp"
                        android:clickable="true"
                        android:focusable="true" />

                </LinearLayout>

                <!-- Event Log -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“‹ Match Events Log"
                    android:textColor="#333333"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:id="@+id/eventLogContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/emptyEventLog"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="16dp"
                            android:text="No events yet. Start recording goals, penalties, and substitutions!"
                            android:textColor="#757575"
                            android:textSize="14sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <!-- Modal Overlay -->
    <FrameLayout
        android:id="@+id/modalOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <!-- Minor Penalty Modal -->
        <LinearLayout
            android:id="@+id/minorPenaltyModal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/modal_background"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/modal_header_blue"
                android:text="Minor Penalty"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingTop="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Offending Player -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Offending Player"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <Spinner
                    android:id="@+id/minorTeamSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/spinner_background"
                    android:layout_marginBottom="12dp" />

                <Spinner
                    android:id="@+id/minorPlayerSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/spinner_background"
                    android:layout_marginBottom="24dp" />

                <!-- Penalty Type -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Penalty Type"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <Spinner
                    android:id="@+id/minorPenaltyTypeSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@drawable/spinner_background_large"
                    android:layout_marginBottom="24dp" />

                <!-- Duration -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="32dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Duration"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2:00"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/minorCancelButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Cancel"
                        android:textColor="#2196F3"
                        android:background="@drawable/button_outline_blue"
                        android:textSize="16sp"
                        android:layout_marginEnd="12dp" />

                    <Button
                        android:id="@+id/minorAddButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Add Penalty"
                        android:textColor="@android:color/white"
                        android:background="@drawable/rounded_button_blue"
                        android:textSize="16sp"
                        android:layout_marginStart="12dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Major Penalty Modal -->
        <LinearLayout
            android:id="@+id/majorPenaltyModal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/modal_background"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/modal_header_blue"
                android:text="Major Penalty"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingTop="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Offending Player -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Offending Player"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <Spinner
                    android:id="@+id/majorTeamSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/spinner_background"
                    android:layout_marginBottom="12dp" />

                <Spinner
                    android:id="@+id/majorPlayerSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/spinner_background"
                    android:layout_marginBottom="24dp" />

                <!-- Penalty Type -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Penalty Type"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <Spinner
                    android:id="@+id/majorPenaltyTypeSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@drawable/spinner_background_large"
                    android:layout_marginBottom="24dp" />

                <!-- Duration -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="32dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Duration"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2:00"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/majorCancelButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Cancel"
                        android:textColor="#2196F3"
                        android:background="@drawable/button_outline_blue"
                        android:textSize="16sp"
                        android:layout_marginEnd="12dp" />

                    <Button
                        android:id="@+id/majorAddButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Add Penalty"
                        android:textColor="@android:color/white"
                        android:background="@drawable/rounded_button_blue"
                        android:textSize="16sp"
                        android:layout_marginStart="12dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Player Substitution Modal -->
        <LinearLayout
            android:id="@+id/substitutionModal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/modal_background"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/modal_header_blue"
                android:text="Player Substitution"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingTop="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Team -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Team"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <Spinner
                    android:id="@+id/substitutionTeamSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/spinner_background"
                    android:layout_marginBottom="24dp" />

                <!-- Player In -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Player In"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <Spinner
                    android:id="@+id/playerInSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/spinner_background"
                    android:layout_marginBottom="24dp" />

                <!-- Player Out -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Player Out"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <Spinner
                    android:id="@+id/playerOutSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/spinner_background"
                    android:layout_marginBottom="32dp" />

                <!-- Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/substitutionCancelButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Cancel"
                        android:textColor="#2196F3"
                        android:background="@drawable/button_outline_blue"
                        android:textSize="16sp"
                        android:layout_marginEnd="12dp" />

                    <Button
                        android:id="@+id/substitutionConfirmButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Confirm"
                        android:textColor="@android:color/white"
                        android:background="@drawable/rounded_button_blue"
                        android:textSize="16sp"
                        android:layout_marginStart="12dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</FrameLayout>